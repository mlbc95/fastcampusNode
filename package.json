{
  "name": "fast-campus-server",
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "main": "dist/server.js",
  "engines": {
    "node": "^8.5.0",
    "npm": "^5.4.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mlbc95/fastcampusNode"
  },
  "author": "FASTCampus",
  "license": "Private",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run && npm run build-ts && npm run tslint && npm run copy-static-assets && npm run buildApiDoc",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "copy-static-assets": "node copyFirebaseKey.js",
    "buildApiDoc": "apidoc -i src/ -o dist/public/docs"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/async": "^2.0.40",
    "@types/body-parser": "^1.16.2",
    "@types/compression": "0.0.33",
    "@types/cors": "^2.8.1",
    "@types/dotenv": "^2.0.20",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.35",
    "@types/jest": "^19.2.2",
    "@types/jquery": "^2.0.41",
    "@types/lodash": "^4.14.63",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.12",
    "@types/request": "0.0.45",
    "@types/supertest": "^2.0.0",
    "@types/validator": "^6.3.0",
    "apidoc": "^0.17.6",
    "async": "^2.5.0",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "concurrently": "^3.4.0",
    "cors": "^2.8.4",
    "errorhandler": "^1.5.0",
    "express": "^4.16.0",
    "firebase": "^4.6.0",
    "firebase-admin": "^5.4.2",
    "jest": "^19.0.2",
    "lodash": "^4.17.4",
    "lusca": "^1.5.1",
    "morgan": "^1.9.0",
    "nodemon": "^1.11.0",
    "path": "^0.12.7",
    "request": "^2.78.0",
    "shelljs": "^0.7.7",
    "supertest": "^2.0.1",
    "ts-jest": "^19.0.8",
    "tsc": "^1.20150623.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3",
    "validator": "^8.2.0"
  }
}
